<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." aria-describedby="search-button" value="{{keyword}}" />

            <div class="btn-group  row">
              <select class="form-select" id="specificSizeSelect" name="option" value="option">
                <option> Sort</option>
                <option value="asc">A->Z</option>
                <option value="desc">Z->A</option>
                <option value="category">category</option>
                <option value="location">location</option>
              </select>
            </div>

          </div>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>


<form class="row gx-3 gy-2 align-items-center   mb-lg-0" id="search-form" action="/search">

</form>








<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 col-12 mx-auto ">
      <div class="card-columns blockDiv">
        {{#each restaurants }}
        <div class="block card-component">
          <a href="./restaurants/{{this._id}}" class="text-secondary ">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="無法顯示的餐廳">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
              <div class="control-panel ">
                <a href="./restaurants/{{ this._id }}" class="control-panel-component">Detail</a>
                <a href="./restaurants/{{ this._id }}/edit" class="control-panel-component">Edit</a>
                <form class="control-panel-component delete-button" action="/restaurants/{{ this._id }}?_method=DELETE"
                  method="POST" style="display: inline; margin:5px;">
                  <button type="submit">Delete</button>
                </form>
              </div>
            </div>
          </a>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
</div>